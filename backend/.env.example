# ============================================================================
# SamiShops Backend - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in the values for your deployment

# ----------------------------------------------------------------------------
# Environment
# ----------------------------------------------------------------------------
ENVIRONMENT=production
# Options: development, staging, production

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/samishops?sslmode=require

# Railway: Uses built-in DATABASE_URL
# Render: Uses built-in DATABASE_URL
# Neon: postgresql://neondb_owner:password@ep-xxx.aws.neon.tech/neondb?sslmode=require

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
BACKEND_URL=https://samishops-backend-production.up.railway.app
FRONTEND_URL=https://samishops.vercel.app
PORT=8000

# ----------------------------------------------------------------------------
# JWT Authentication
# ----------------------------------------------------------------------------
# Generate a strong secret key for production: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-for-jwt-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# ----------------------------------------------------------------------------
# Optional: Feature Flags
# ----------------------------------------------------------------------------
ENABLE_DOCS=false
ENABLE_CORS_STRICT=true
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# ----------------------------------------------------------------------------
# Optional: External Services
# ----------------------------------------------------------------------------
# Email Service (e.g., SendGrid, Mailgun)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@samishops.com

# File Storage (e.g., AWS S3, Cloudflare R2)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=samishops-uploads

# Payment Gateway (e.g., Stripe, JazzCash)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
JAZZCASH_MERCHANT_ID=your-merchant-id
JAZZCASH_PASSWORD=your-password
